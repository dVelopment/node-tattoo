extends layout

block content
    div.page-header
        h3
            | Mode: #{mode}

    form(action="",method="get")
        div.form-group-lg
            label(for=text).control-label
                | Text:
            input.form-control(type="text",name="text",value=text)#text
        div.form-group-lg
            button.btn.btn-primary(type="submit")
                | Display

    hr

    each data in groups
        h4
            | #{data.text}
            small
                | #{data.icons.length} icons, #{data.icons.length / 4} characters
        div.bit-group
            each icon, idx in data.icons
                if idx > 0 && idx % 4 == 0
                    span.spacer
                div(class="bit bit#{icon}")
        hr

    h3.page-header= "Legend"
    dl.dl-horizontal
        each icon in legend
            dt
                | <strong>#{icon}</strong>
            dd
                div.bit-group
                    div(class="bit bit" + icon)
